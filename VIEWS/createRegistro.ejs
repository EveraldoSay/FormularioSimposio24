<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Agregar Sucursal</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1>Agregar rEGISTRO ESTUDIANTE A SIMPOSIO</h1>
        <form action="/Registro/save" method="POST">
            <div class="form-group">
                <label for="iDcarrera">SELECCIONE CODIGO CARRERA</label>
                <select name="Idcarrera" class="form-control" required>
                    <% empresas.forEach(carreras => { %>
                        <option value="<%= empresa.idEmpresa %>"><%= carrera.Nombre %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label for="Correlativo">Correlativo</label>
                <input type="text" class="form-control" name="Correlativo" required>
            </div>
            <div class="form-group">
                <label for="Nombre">Nombre</label>
                <input type="text" class="form-control" name="Nombre" required>
            </div>
            <div class="form-group">
                <label for="Apellido">Apellido</label>
                <input type="text" class="form-control" name="Apellido" required>
            </div>
            <div class="form-group">
                <label for="FechaRegistro">FechaRegistro</label>
                <input type="date" class="form-control" name="FechaRegistro" required>
            </div>          
            <button type="submit" class="btn btn-success">Guardar</button>
            <a href="/sucursales" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>
